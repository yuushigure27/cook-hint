<div class="container mt-5">
  <h2 class="fw-light">ジャンルを編集する</h2>
  <hr class="heading-line mb-4">

  <%= form_with(model: [:admin, @genre], local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :name, 'ジャンル名', class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="d-flex justify-content-end">
      <%= link_to 'キャンセル', admin_genres_path, class: 'btn btn-secondary me-2' %>
      <%= form.submit '更新する', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>