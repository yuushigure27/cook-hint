<div class="container mt-5">
  <h2 class="fw-light">ジャンル名編集</h2>
  <hr class="heading-line mb-4">

  <%= form_with(model: [:admin, @genre], local: true) do |form| %>
    <% if @genre.errors.any? %>
      <div class="alert alert-danger">
        <h4 class="alert-heading">エラーがあります：</h4>
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, 'ジャンル名', class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control', value: @genre.name %>
    </div>

    <div class="d-flex justify-content-end">
      <%= link_to 'キャンセル', admin_genres_path, class: 'btn btn-secondary me-2' %>
      <%= form.submit '更新する', class: 'btn btn-primary me-2' %>
      <%= link_to '削除', admin_genre_path(@genre), method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn btn-danger', id: 'delete-genre-btn' %>
    </div>
  <% end %>
</div>
