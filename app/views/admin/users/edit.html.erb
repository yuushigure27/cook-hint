<div class="container px-1 py-2">
  <%= render 'layouts/errors', obj: @user %>
  <div class="row mt-5">
    <div class="col-12 col-lg-8 mx-auto">
      <h2><%= @user.name %>さんの会員情報編集</h2>
      <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
        <div class="bg-gray">
          <table class="form-new table table-borderless">
            <tr><th scope="col">会員ID</th><td><%= @user.id %></td></tr>
              <tr>
                <th scope="col">ニックネーム</th>
                <td>
                  <div class="field d-flex justify-content-between">
                    <%= f.text_field :name, class: "form-control" %>
                  </div>
                </td>
              </tr>
              <tr>
                <th scope="col">メールアドレス</th>
                <td>
                  <div class="field">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                  </div>
                </td>
              </tr>
              <tr>
                <th scope="col">会員ステータス</th>
                <td>
                  <%= f.radio_button :is_active, "true" %>
                  <%= f.label :is_active_true, "有効" %>
                  <%= f.radio_button :is_active, "false" %>
                  <%= f.label :is_active_false, "退会" %>
                </td>
              </tr>
          </table>
        </div>
        <%= f.submit '変更を保存', class: "btn btn-success w-25" %>
      <% end %>
    </div>
  </div>
</div>