<div class="container px-1 py-2">
  <div class="row mt-4">
    <div class="col-12 col-lg-8 mx-auto">
      <h2>ユーザー一覧</h2>
      <table class="table table-hover">
        <thead>
          <tr class="table-secondary">
            <th>ID</th>
            <th>ユーザー名</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td style="width: 20%;"><%= user.id %></td>
            <td style="width: 30%;">
              <%= link_to admin_user_path(user.id), class: "text-green" do %>
                 <%= truncate(user.name, length: 15) %>
              <% end %>
            </td>
            <td style="width: 20%;">
              <% if user.is_active %>
                <div class="text-success"><b>有効</b></div>
              <% else %>
                <div class="text-secondary"><b>退会</b></div>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div> 
  </div>
  <div class="row">
    <div class="col text-center m-4">
      <%= link_to_prev_page @users, '戻る', class: "paginate py-2 px-4" %>
      <%= link_to_next_page @users, '次へ', class: "paginate py-2 px-4" %>
    </div>
  </div>
</div>
