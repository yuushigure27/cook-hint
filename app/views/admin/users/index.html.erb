<div class="container px-1 py-2">
  <div class="row">
    <h2>ユーザー 一覧</h2>
    <hr class="heading-line">
    <%= render "index", users: @users %>
  </div>
  <div class="row">
    <div class="col text-center m-4">
      <%= link_to_prev_page @users, '戻る', class: "paginate py-2 px-4" %>
      <%= link_to_next_page @users, '次へ', class: "paginate py-2 px-4" %>
    </div>
  </div>
</div>