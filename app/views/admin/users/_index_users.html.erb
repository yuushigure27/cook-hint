<div class="container px-1 py-2">
  <div class="row">
    <div class="col-12">
      <h2>ユーザー 一覧</h2>
      <hr class="heading-line">
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="table-responsive">
        <table class="table table-hover table-bordered text-center">
          <thead>
            <tr class="table-secondary">
              <th>ユーザーID</th>
              <th>ユーザー名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td>
                  <%= link_to admin_user_path(user.id), class: "text-green link-style" do %>
                    <%= user.name %>
                  <% end %>
                </td>
                <td><%= user.email %></td>
                <td>
                  <% if user.is_active %>
                    <div class="text-success"><b>有効</b></div>
                  <% else %>
                    <div class="text-secondary"><b>退会</b></div>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
