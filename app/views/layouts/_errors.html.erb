<% if obj.errors.any? %>
  <div class="alert alert-danger">
    <h3><%= obj.errors.count %> 件のエラーが発生しました</h3>
    <ul class="list-unstyled">
      <% 
        sorted_messages = obj.errors.full_messages.sort_by do |message|
          case message
          when /ニックネーム/
            1
          when /メールアドレス/
            2
          when /パスワード/
            3
          else
            4
          end
        end
      %>
      <% sorted_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>