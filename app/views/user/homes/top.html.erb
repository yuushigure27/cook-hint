<div class="album py-5 bg-body-tertiary bg-image">
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <div class="bg-white bg-opacity-75 p-3 rounded text-center">
          <h1 class="fw-light">Cook Hintへようこそ！！</h1>
          <p class="lead text-body-secondary">質問・相談・回答を行う場合は、登録が必要です。</p>
        </div>
      </div>
    </div>
  </section>
</div>

<div class="py-5 text-center container">
  <h1 class="fw-light">新着投稿一覧</h1>
</div>

<div class="album py-5 bg-body-tertiary">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @posts.each do |post| %>
        <div class="col my-3">
          <div class="card shadow-sm" style="height: 100%;">
            <% if post.image.attached? %>
              <%= image_tag post.image, class: "card-img-top img-fluid", alt: "Thumbnail", style: "width: 100%; height: 200px; object-fit: cover;" %>
            <% else %>
              <%= image_tag 'no_image.png', class: "card-img-top img-fluid", alt: "Thumbnail", style: "width: 100%; height: 200px; object-fit: cover;" %>
            <% end %>
            <div class="card-body">
              <p class="card-text" style="font-size: 1rem;"><%= truncate(post.title, length: 15) %></p>
              <p class="card-text" style="font-size: 0.875rem;"><%= truncate(post.introduction, length: 40) %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to "View", post_path(post), class: "btn btn-sm btn-outline-secondary" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
