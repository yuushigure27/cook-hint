<% if user_signed_in? || admin_signed_in? %>
<% else %>
<div class="album py-5 bg-body-tertiary bg-image">
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <div class="bg-white bg-opacity-75 p-3 rounded text-center">
          <h1 class="fw-light">Cook Hintへようこそ！！</h1>
          <p class="lead text-body-secondary">質問・相談・回答を行う場合は、登録が必要です。</p>
          <div class="mt-4">
            <a href="/users/sign_up" class="btn btn-primary mx-2 btn-sign-up">新規登録</a>
            <a href="/users/sign_in" class="btn btn-secondary mx-2 btn-login">ログイン</a>
          </div>
          <div class="mt-2">
            <%= link_to "ゲストログイン(投稿閲覧のみ)", user_guest_sign_in_path, class: "btn btn-outline-secondary mx-2 btn-guest-login", method: :post  %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<% end %>

<div class="pt-5 text-center container">
  <h2 class="fw-light">新着投稿一覧</h2>
  <hr class="heading-line mb-4">
</div>

<%= render "user/posts/post_index4", posts: @posts %>

<div class="text-center py-3">
  <%= link_to "投稿一覧へ", posts_path, class: "btn btn-posts" %>
</div>


