<div class="container px-3 py-4">
  <%= render "layouts/errors", obj: @user %>

  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10">
      <h2 class="mt-4 text-center">ログイン</h2>
      <hr class="heading-line">
      <div class="bg-orange p-4 rounded shadow">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
          <div class="form-group text-center">
            <%= f.submit "ログイン", class: "btn btn-success w-50 mt-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row justify-content-center mt-3">
    <div class="col-lg-6 col-md-8 col-sm-10 text-center">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "新規登録はこちらから", new_registration_path(resource_name) %><br />
      <% end %>
    </div>
  </div>
</div>
