<div class="d-flex align-items-center">
  <% if post.liked_by?(current_user) %>
    <%= link_to post_likes_path(post), method: :delete, class: "d-flex align-items-center me-3" do %>
      <i class="fa-solid fa-heart"></i><span class="ms-1"><%= post.likes.count %></span>
    <% end %>
  <% else %>
    <%= link_to post_likes_path(post), method: :post, class: "d-flex align-items-center me-3" do %>
      <i class="fa-regular fa-heart"></i><span class="ms-1"><%= post.likes.count %></span>
    <% end %>
  <% end %>
  <i class="far fa-comment" style="margin-left: 5px;"></i><span class="ms-1"><%= post.comments.count %></span>
</div>
