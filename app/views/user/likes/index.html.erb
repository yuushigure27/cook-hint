<div class="py-5 text-center container">
  <h2 class="d-inline">いいね一覧</h2>
  <span class="m-3 mb-0">(全<%= @likes.count %>件)</span>
  <hr class="heading-line mb-4">
  <% if @likes.any? %>
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-lg-3 col-md-4 col-sm-6 my-3">
          <div class="card shadow-sm" style="height: 100%;">
            <% if post.image.attached? %>
              <%= image_tag post.image, class: "card-img-top img-fluid", alt: "Thumbnail", style: "width: 100%; height: 200px; object-fit: cover;" %>
            <% else %>
              <%= image_tag 'no_image.png', class: "card-img-top img-fluid", alt: "Thumbnail", style: "width: 100%; height: 200px; object-fit: cover;" %>
            <% end %>
            <div class="card-body">
              <p class="card-text text-left" style="font-size: 1rem;"><%= truncate(post.title, length: 10) %></p>
              <p class="card-text text-left" style="font-size: 0.875rem;"><%= truncate(post.introduction, length: 25) %></p>
              <div class="d-flex justify-content-between align-items-center">
                <%= link_to "View", post_path(post), class: "btn btn-sm btn-outline-secondary" %>
                <div>
                  <%= render "user/likes/form", post: post %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center">いいねした投稿はまだありません。</p>
  <% end %>
</div>


<div class="row">
  <!-- Pagination -->
  <div class="col text-center m-3">
    <nav class="paginate" aria-label="Page navigation">
      <ul class="pagination">
        <li class="page-item">
          <%= link_to_prev_page @posts, '<span aria-hidden="true">«</span>'.html_safe, class: "page-link", aria: { label: "Previous" } %>
        </li>
        <% @posts.total_pages.times do |i| %>
          <li class="page-item <%= 'active' if @posts.current_page == i + 1 %>">
            <%= link_to (i + 1).to_s, url_for(page: i + 1), class: "page-link" %>
          </li>
        <% end %>
        <li class="page-item">
          <%= link_to_next_page @posts, '<span aria-hidden="true">»</span>'.html_safe, class: "page-link", aria: { label: "Next" } %>
        </li>
      </ul>
    </nav>
  </div>
</div>