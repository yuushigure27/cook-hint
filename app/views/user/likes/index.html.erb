<div class="pt-5 text-center container">
  <h2 class="d-inline">いいね一覧</h2>
  <span class="m-3 mb-0">(全<%= @likes.count %>件)</span>
  <hr class="heading-line">
</div>

<% if @likes.any? %>
  <%= render "user/posts/post_index4", posts: @posts %>
<% else %>
  <p class="text-center">いいねした投稿はまだありません。</p>
<% end %>



<div class="row">
  <!-- ページネーション -->
  <div class="col text-center m-3">
    <%= link_to_prev_page @posts, '戻る', class: "paginate py-2 px-4" %>
    <%= link_to_next_page @posts, '次へ', class: "paginate py-2 px-4" %>
  </div>
</div>