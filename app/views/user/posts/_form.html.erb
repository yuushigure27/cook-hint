<%= form_with model: @post , local: true do |f| %>
  <div class="bg-gray row">
    <table class="form-new table table-borderless col-md-6 mx-auto">
      <tr class="form-group">
        <th><%= f.label :image, "画像" %></th>
        <td><%= f.file_field :image %></td>
      </tr>

      <tr class="form-group">
        <th><%= f.label :title, "タイトル" %></th>
        <td><%= f.text_field :title, placeholder: "タイトル", size: "30", class: "form-control" %></td>
      </tr>

      <tr class="form-group">
        <th><%= f.label :introduction, "内容" %></th>
        <td><%= f.text_area :introduction, placeholder: "ここに内容を記述します", :cols => 30, :rows => 5, class: "form-control" %></td>
      </tr>

      <tr class="form-group">
        <th><%= f.label :genre_id, "ジャンル" %></th>
        <td><%= f.collection_select :genre_id, Genre.all, :id, :name,{ prompt: "選択して下さい" }, class: "form-control" %></td>
      </tr>
    </table>
  </div>
  <div class="d-grid col-2 mx-auto">
      <%= f.submit "新規登録", class: "py-2 px-4 btn btn-success submit-btn" %>
  </div>
<% end %>