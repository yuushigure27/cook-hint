<div class="d-flex justify-content-end mb-2">
  <div class="btn-group mr-2" role="group" aria-label="Best Answer Filter">
    <%= link_to '解決済み', posts_path(best_answer: "true"), class: "btn btn-outline-primary" %>
    <%= link_to '回答受付中', posts_path(best_answer: "false"), class: "btn btn-outline-primary" %>
  </div>
  <div class="btn-group" role="group" aria-label="Sort options">
    <%= link_to '新しい順', posts_path(latest: "true"), class: "btn btn-outline-primary" %>
    <%= link_to '古い順', posts_path(old: "true"), class: "btn btn-outline-primary" %>
    <%= link_to 'いいね順', posts_path(most_liked: "true"), class: "btn btn-outline-primary" %>
  </div>
</div>