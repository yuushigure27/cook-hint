<div class="container mt-5">
  <div class="row">
    <!-- ジャンル検索 -->
    <div class="col-md-3 mb-4 mt-1">
      <%= render "user/searches/genre_search", genres: @genres %>
    </div>

    <!-- 投稿一覧 -->
    <div class="col-md-9">
      <div class="album bg-body-tertiary">
        <div class="container">
          <div class="text-center">
            <h2 class="d-inline">投稿一覧</h2>
            <span class="m-3 mb-0">(全<%= @post_all.count %>件)</span>
<div class= "text-right">
  <%= link_to '新規投稿', new_post_path, class: "btn btn-secondary" %>
</div>


          </div>
          <hr class="heading-line w-100">
          <% if @posts.empty? %>
            <div class="mt-3">
              <p>投稿はありません</p>
            </div>
          <% else %>
            <div class="album bg-body-tertiary">
              <div class="d-flex justify-content-end mb-4">
                <div class="btn-group" role="group" aria-label="Sort options">
                  <%= link_to '新しい順', posts_path(latest: "true"), class: "btn btn-outline-primary" %>
                  <%= link_to '古い順', posts_path(old: "true"), class: "btn btn-outline-primary" %>
                  <%= link_to '評価の高い順', posts_path(most_liked: "true"), class: "btn btn-outline-primary" %>
                </div>
              </div>
              <%= render "user/posts/post_index", posts: @posts %>
            </div>
            <div class="row">
               <!--ページネーション -->
              <div class="col text-center m-3">
                <%= link_to_prev_page @posts, '戻る', class: "paginate py-2 px-4" %>
                <%= link_to_next_page @posts, '次へ', class: "paginate py-2 px-4" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



