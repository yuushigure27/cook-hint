<div class="container mt-5">
  <div class="row">
    <!-- プロフィール -->
    <div class="col-md-3 mb-4 mt-1">
      <div class="card">
        <div class="card-body text-center">
          <h2 class="card-title mb-3">プロフィール</h2>
          <div class="mb-3">
            <%= image_tag @user.get_profile_image || 'default_profile_image.png', size: '100x100', class: "rounded-circle" %>
          </div>
          <h5><%= @user.name %></h5>
          <p><%= @user.introduction %></p>
          <div>
            <% if current_user == @user %>
              <%= link_to users_edit_path(@user), class: "btn btn-outline-secondary" do %>
                <i class="fas fa-user-cog"></i> プロフィールを編集
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- ユーザーの投稿一覧 -->
    <div class="col-md-9">
      <div class="album bg-body-tertiary">
        <div class="container">
          <div class="text-center">
            <h2><%= @user.name %>さんの投稿一覧</h2>
            <p class="m-3 mb-0">(全<%= @user.posts.count %>件)</p>
          </div>
          <hr class="heading-line w-100">
          <% if @user.posts.empty? %>
            <div class="mt-3">
              <p>投稿はありません</p>
            </div>
          <% else %>
            <div class="row row-cols-1 row-cols-md-3 g-3">
              <% @user.posts.each do |post| %>
                <div class="col-md-4 my-4">
                  <div class="card shadow-sm" style="height: 100%;">
                    <% if post.image.attached? %>
                      <%= image_tag post.image, class: "card-img-top img-fluid", alt: "Thumbnail", style: "height: 200px; object-fit: cover;" %>
                    <% else %>
                      <%= image_tag 'no_image.png', class: "card-img-top img-fluid", alt: "Thumbnail", style: "height: 200px; object-fit: cover;" %>
                    <% end %>
                    <div class="card-body">
                      <p class="card-text" style="font-size: 1rem;"><%= truncate(post.title, length: 15) %></p>
                      <p class="card-text" style="font-size: 0.875rem;"><%= truncate(post.introduction, length: 40) %></p>
                      <div class="btn-group">
                        <%= link_to "View", post_path(post), class: "btn btn-sm btn-outline-secondary" %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
