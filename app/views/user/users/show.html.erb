<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>マイページ</h2>
      <table class='table'>
        <tr>
          <td><%= image_tag @user.get_profile_image, size: '100x100' %></td>
        </tr>
        <tr>
          <th>ニックネーム</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>自己紹介</th>
        </tr>
        <tr>
          <td colspan="2"><%= @user.attributes["introduction"] %></td>
        </tr>
      </table>

      <div class='row'>
        <% if current_user != @user %>
          <td><%= render "relationships/btn", user: @user, options: { class: ""} %></td>
        <% else %>
          <%= link_to users_edit_path(@user), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        <% end %>

        <% unless @user.guest_user? %>
          <%= link_to 'Edit Profile', users_edit_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{@user.id}" %>
        <% end %>
      </div>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>投稿一覧</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>タイトル</th>
            <th>内容</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @user.posts.each do |post| %>
            <tr>
              <td><%= link_to post.title, post, class: "post_#{post.id}" %></td>
              <td><%= post.introduction %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
