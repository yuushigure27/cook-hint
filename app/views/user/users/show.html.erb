<div class="container mt-5">
  <div class="row">
    <!-- プロフィール -->
    <div class="col-md-3 mb-4 mt-1">
      <div class="card">
        <div class="card-body text-center">
          <h2 class="card-title mb-3"></h2>
          <div class="mb-3">
            <%= image_tag @user.get_profile_image || 'default_profile_image.png', size: '100x100', class: "rounded-circle" %>
          </div>
          <h5><%= @user.name %></h5>
          <p><%= @user.introduction %></p>
          <div>
            <% if current_user == @user %>
              <% if current_user.email != "guest@example.com" %>
                <%= link_to users_edit_path(@user), class: "btn btn-outline-secondary" do %>
                  <i class="fas fa-user-cog"></i> プロフィールを編集
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- ユーザーの投稿一覧 -->
    <div class="col-md-9">
      <div class="album bg-body-tertiary">
        <div class="container">
          <div class="text-center">
            <h2 class="d-inline"><%= @user.name %>さんの投稿一覧</h2>
            <span class="m-3 mb-0">(全<%= @user.posts.count %>件)</span>
          </div>
  <div class= "text-right">
    <%= link_to 'いいね一覧', likes_path, class: "btn btn-secondary" %>
    <%= link_to '', new_post_path, class: "fa-solid fa-notes-medical" %>
  </div>
          <hr class="heading-line w-100">
          <% if @user.posts.empty? %>
            <div class="mt-3">
              <p>投稿はありません</p>
            </div>
          <% else %>
          <div class="album bg-body-tertiary">
              <div class="d-flex justify-content-end mb-4">
                <div class="btn-group" role="group" aria-label="Sort options">
                  <%= link_to '新しい順',my_page_path(latest: "true"), class: "btn btn-outline-primary" %>
                  <%= link_to '古い順',  my_page_path(old: "true"), class: "btn btn-outline-primary" %>
                </div>
              </div>

            <div class="row">
              <% @posts.each do |post| %>
                <div class="col-sm-6 col-lg-4 my-4">
                  <div class="card card-custom shadow-sm" >
                    <% if post.image.attached? %>
                      <%= image_tag post.image, class: "card-img-top img-fluid", alt: "Thumbnail", style: "height: 200px; object-fit: cover;" %>
                    <% else %>
                      <%= image_tag 'no_image.png', class: "card-img-top img-fluid", alt: "Thumbnail", style: "height: 200px; object-fit: cover;" %>
                    <% end %>
                    <div class="card-body">
                      <p class="card-text__title" style="font-size: 1rem;"><%= truncate(post.title, length: 10) %></p>
                      <p class="card-text__introduction" style="font-size: 0.875rem;"><%= truncate(post.introduction, length: 25) %></p>
                      <div class="d-flex justify-content-between align-items-center">
                        <%= link_to "View", post_path(post), class: "btn btn-sm btn-outline-secondary" %>
                        <%= render "user/likes/form", post: post %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
