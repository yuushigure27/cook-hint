<div class="container px-3 py-4 mb-4"> 
  <%= render "layouts/errors", obj: @user %>

  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10">
      <h2 class="mt-4 mb-4 text-center">新規会員登録</h2> <!-- Added mb-4 for margin bottom -->
      <div class="form-container p-4 rounded shadow">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :name, "ニックネーム" %>
            <%= f.text_field :name, autofocus: true, placeholder: "花子", class: "form-control" %>
            <small class="text-muted">（2文字以上必要です。）</small>

          </div>
          <div class="form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            <% if @minimum_password_length %>
              <small class="text-muted">（<%= @minimum_password_length %> 文字以上必要です。）</small>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, "パスワード（確認用）" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="form-group text-center">
            <%= f.submit "新規登録", class: "btn btn-success w-50" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10">
      <h2 class="mt-4 mb-4 text-center">既に登録済みの方</h2> 
      <div class="form-container p-4 rounded shadow text-center">
        <%= link_to 'こちら', new_user_session_path %> <p class="mt-3">からログインしてください。</p>
      </div>
    </div>
  </div>
</div>
