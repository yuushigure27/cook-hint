<div class="container mt-5 px-1 py-2">
  <div class="row">
    <div class="col-12 d-flex justify-content-center align-items-center">
      <h2><%= @genre.name %>一覧</h2>
        <p class="m-3 mb-0">(全<%= @posts.count %>件)</p>
      <%= link_to "新規投稿", new_post_path, class: "btn btn-primary ml-5" %>
    </div>
    <hr class="heading-line w-100">
  </div>
  

  <div class="row">
    <!-- サイドバー -->
    <div class="col-md-3">
      <%= render 'genre_search', genres: @genres %>
    </div>
    
    <!-- 投稿リスト -->
    <div class="col-md-9">
      <div class="album bg-body-tertiary">
        
      </div>
      <hr class="heading-line">
      <%= render "user/posts/post_index", posts: @posts %>
      <div class="row">
        <!-- ページネーション -->
        <div class="col text-center m-3">
          <%= link_to_prev_page @posts, '戻る', class: "paginate py-2 px-4" %>
          <%= link_to_next_page @posts, '次へ', class: "paginate py-2 px-4" %>
        </div>
      </div>
    </div>
  </div>
</div>