<div class="genre_search">
  <table class="table table-bordered">
    <tr>
      <th class="color-black bg-white text-center"><i class="fa-solid fa-magnifying-glass"></i> ジャンル検索</th>
    </tr>
    <% @genres.each do |genre| %>
      <tr onclick="window.location='<%= genre_search_path(genre_id: genre.id) %>'" class="cursor">
        <td class="text-center genre-bg font-weight-bold" style="cursor:pointer;" onmouseover="this.style.backgroundColor='lightgray';" onmouseout="this.style.backgroundColor='';">
          <%= link_to genre.name, genre_search_path(genre_id: genre.id) %>
        </td>
      </tr>
    <% end %>
  </table>
</div>