<div class="container mt-4">
  <h2 class="mb-4">コメントを編集する</h2>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with model: @comment, url: post_comment_path(@post, @comment), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :content, "内容" %>
          <%= f.text_area :content, rows: 5, class: "form-control", placeholder: "ここにコメントを入力してください" %>
        </div>
        <%= f.submit "更新する", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>