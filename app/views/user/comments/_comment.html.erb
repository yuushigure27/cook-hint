<div class="card mb-3" id="post-comment-<%= comment.id %>">
  <div class="card-body d-flex align-items-center">
    <div class="text-center mr-3">
      <%= image_tag comment.user.get_profile_image, size: '50x50', class: "rounded-circle" %>
      <div><%= link_to comment.user.name,  "/my_page?id=#{comment.user.id}", class: "text-dark font-weight-bold" %></div>
    </div>
    <div class="flex-grow-1" style="word-break:break-word;">
      <p class="mb-0"><%= comment.content %></p>
    </div>
  </div>
  <% if comment.user == current_user %>
    <div class="card-footer text-right">
      <%= link_to "編集", edit_post_comment_path(@post, comment), class: "btn btn-sm btn-outline-primary mr-2" %>
      <%= link_to "削除", post_comment_path(@post, comment), method: :delete, remote: true, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-outline-danger" %>
    </div>
  <% end %>
</div>